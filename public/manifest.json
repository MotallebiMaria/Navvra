{
  "manifest_version": 3,
  "name": "Navvra",
  "version": "1.0",
  "description": "AI-powered accessibility assistant that simplifies web pages",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Navvra Accessibility Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injectedPanel.html", "injectedPanel.js"],
      "matches": ["<all_urls>"]
    }
  ]
}